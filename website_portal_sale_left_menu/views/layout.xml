<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="layout" inherit_id="website.layout" name="Main layout Left Menu" primary="True">
    <xpath expr="//head" position="inside">
    	<link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700' rel='stylesheet' type='text/css'/>
		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"/>
    	<link rel="stylesheet" href="/website_portal_left_menu/static/src/css/frontend.css"/>
        <link rel="stylesheet" href="/website_portal_left_menu/static/src/css/theme.css"/>
        <script type="text/javascript" src="/website_portal_left_menu/static/src/js/frontend.js"></script>
    </xpath>
    <xpath expr="//body/main" position="replace">
        <main>
            <div class="container">
                <div class="row">
                    <div class="col-xs-4 col-sm-2">
                        <t t-call="website_portal_left_menu.left_menu"/>
                    </div>
                    <div class="col-xs-8 col-sm-10">
                        <div id="main" class="col-xs-12 col-sm-12">
                            <t t-raw="0"/>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </xpath>
</template>

<template id="left_menu" name="Left Menu">
    <div class="row row-offcanvas row-offcanvas-left">
        <div class="sidebar-offcanvas" role="navigation" id="sidebar">
            <div class="sidebar-nav">
                <ul class="nav" id="left_menu">
                    <t t-set="left_menu"
                       t-value="request.env.ref('website_portal_left_menu.left_menu')"/>
                    <t t-foreach="left_menu.child_id" t-as="submenu">
                        <t t-call="website.submenu"/>
                    </t>
                </ul>
            </div>
        </div>
    </div>
</template>

</data>
</openerp>
