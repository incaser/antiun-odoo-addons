<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="layout" inherit_id="website.layout" name="Main layout" primary="True">
    <xpath expr="//body" position="replace">
        <body>
            <div id="wrapwrap">
                <header>
                    <t t-call="theme_portal_supplier.header"/>
                </header>
                <main>
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-4 col-sm-2">
                                <t t-call="theme_portal_supplier.main_menu"/>
                            </div>
                            <div class="col-xs-8 col-sm-10">
                                <div id="white-bg"/>
                                <div id="main" class="col-xs-12 col-sm-12">
                                    <t t-raw="0"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                <footer>
                    <t t-call="theme_portal_supplier.footer"/>
                </footer>
            </div>
        </body>
    </xpath>
</template>

<template id="main_menu" name="Main Menu">
    <div class="row row-offcanvas row-offcanvas-left">
        <div class="sidebar-offcanvas" role="navigation" id="sidebar">
            <ul class="nav" id="left_menu">
                <t t-set="left_menu"
                   t-value="request.env.ref('theme_portal_supplier.left_menu')"/>
                <t t-foreach="left_menu.child_id" t-as="submenu">
                    <t t-call="website.submenu"/>
                </t>
            </ul>
        </div>
    </div>
</template>

