            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
        </p>
        <div class="row">
            <div class="col-md-12">
                <h1>My Products</h1>
                <ol class="breadcrumb">
                    <li><a href="http://www.antiunhosting.com/mypopwine/my_products.php#" class="text-muted">home</a></li>
                    <li><a href="http://www.antiunhosting.com/mypopwine/my_products.php#" class="text-muted">My Products</a></li>
                </ol>
            </div>
        </div>
        <div class="row mb64">
            <div class="col-md-6">
                <div class="input-group col-md-12">
                    <input type="text" class="form-control grey" placeholder="Name of product"/>
                    <div class="input-group-addon">
                        <img src="/theme_portal_supplier/static/src/img/search.svg"/>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group col-md-6 pull-right">
                    <input type="text" class="form-control" placeholder="Add new product"/>
                    <div class="input-group-addon">
                        <a href="/my/supplier/product/new">
                           <img src="/theme_portal_supplier/static/src/img/plus.svg"/>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb16">
            <div class="col-md-3">
                <!-- TODO: Count products in controllers -->
                <p class="btn pl0">Your Products (Total 41)</p>
            </div>
            <div class="col-md-9">
                <form class="form-inline pull-right">
                    <div class="form-group">
                        <label>Group by:</label>
                        <select class="form-control">
                            <option>Brands</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Filter by:</label>
                        <select class="form-control">
                            <option>Published</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Order by:</label>
                        <select class="form-control">
                            <option>Alphabetical order</option>
                        </select>
                    </div>
                </form>
            </div>
        </div>

        <div class="row mb128">
            <div class="col-md-12">
               <table id="mytable" class="table table-bordred table-striped">
                   <thead>
                       <tr>
                            <th></th>
                            <th>Product</th>
                            <th>Price<br/>
                                caja de 1</th>
                            <th>precio<br/>
                                caja de 2</th>
                            <th>precio<br/>
                                caja de 3</th>
                            <th>precio<br/>
                                caja de 6</th>
                            <th>precio<br/>
                                caja de 12</th>
                            <th class="text-right">Stock</th>
                            <th class="text-center">Published</th>
                            <th></th>
                        </tr>
                   </thead>
                   <tbody>
                       <t t-foreach="suppliersinfo" t-as="supplierinfo">
                           <t t-set="product" t-value="supplierinfo.product_tmpl_id"/>
                           <tr>
                               <td><input type="checkbox" class="checkthis"/></td>
                               <td>
                                   <a t-att-href="'/my/supplier/product/%s' % slug(supplierinfo)" t-att-alt="supplierinfo.product_name or product.name">
                                        <span t-esc="supplierinfo.product_name or product.name"/>
                                   </a>
                               </td>
                               <!-- TODO: Assign price by packaging -->
                               <td>10 €</td>
                               <td>20 €</td>
                               <td>30 €</td>
                               <td>60 €</td>
                               <td>120 €</td>
                               <td class="text-right">
                                   <!-- TODO: Check stock by controller -->
                                   <img src="/theme_portal_supplier/static/src/img/alert-b.svg"/> 10 ud.
                               </td>
                               <td class="text-center">
                                   <span t-if="product.website_published">
                                       <img src="/theme_portal_supplier/static/src/img/check.svg"/>
                                   </span>
                                   <span t-if="not product.website_published">
                                       <img src="/theme_portal_supplier/static/src/img/close-s.svg"/>
                                   </span>
                               </td>
                               <!-- TODO: Delete product controller -->
                               <td><img src="/theme_portal_supplier/static/src/img/delete.svg"/></td>
                           </tr>
                       </t>
                   </tbody>
               </table>
            </div>
        </div>
        <div class="products_pager">
          <t t-call="website.pager"/>
        </div>
    </div>
</template>

<template id="product" name="Supplier Product">
